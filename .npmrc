# NPM Configuration for BPL Commander
# This file helps resolve common Windows/corporate network issues

# Use public npm registry (avoids corporate registry issues)
registry=https://registry.npmjs.org/

# Increase timeout for slow networks
timeout=300000

# Disable strict SSL for corporate environments (use with caution)
# strict-ssl=false

# Retry settings for network issues
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retry-factor=2
fetch-retries=3

# Cache settings (using prefer-online instead of deprecated cache-max/cache-min)
# prefer-online=true is set below

# Progress settings
progress=true
loglevel=warn

# Windows-specific settings
# Avoid long path issues on Windows
prefer-offline=false
prefer-online=true

# Package lock settings
package-lock=true
package-lock-only=false

# Node-gyp settings for Windows
msvs_version=2019
python=python3
